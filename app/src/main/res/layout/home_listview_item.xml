<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="?attr/zztextColor"
        app:textColorAttr="zztextColor"
        android:background="?attr/zzItemBackground"
        app:backgroundAttr="zzItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_homelist_textview"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nnnnnnnnnnnnnnn"
            android:textColor="?attr/zztextColor"
            app:textColorAttr="zztextColor"
            android:background="?attr/zzItemBackground"
            app:backgroundAttr="zzItemBackground"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv2_homelist_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="nnnnnnnn"
            android:textColor="?attr/zztextColor"
            app:textColorAttr="zztextColor"
            android:background="?attr/zzItemBackground"
            app:backgroundAttr="zzItemBackground"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/im_list_imageview"
        android:textColor="?attr/zztextColor"
        app:textColorAttr="zztextColor"
        android:background="?attr/zzItemBackground"
        app:backgroundAttr="zzItemBackground"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>
