<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="?attr/zztextColor"
    app:textColorAttr="zztextColor"
    android:background="?attr/zzItemBackground"
    app:backgroundAttr="zzItemBackground"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"/>

    <LinearLayout
        android:id="@+id/centerll"
        android:layout_gravity=""
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:orientation="horizontal"/>

    <android.support.design.widget.TabLayout
        android:textColor="?attr/zztextColor"
        app:textColorAttr="zztextColor"
        android:background="?attr/zzItemBackground"
        app:backgroundAttr="zzItemBackground"
        android:id="@+id/fragment_home_tablyout"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:tabTextColor="@color/black"
        android:visibility="gone"
        app:tabSelectedTextColor="@color/tabcolor"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:textColor="?attr/zztextColor"
        app:textColorAttr="zztextColor"
        android:background="?attr/zzItemBackground"
        app:backgroundAttr="zzItemBackground"
        android:id="@+id/vp_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

</LinearLayout>

